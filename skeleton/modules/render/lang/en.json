{
	"name": "slim",
	"handlers": [
		{
			"name": "help",
			"switches": ["--help", "help"],
			"help": 
		},
		{
			"name": "render",
			"switches": ["--batch", "--json", "--output"],
			"help": {
				"primary": [
					{ "text": "arguments: slim render [:options] file OR file url", "newline": {"post": 2, "pre":1}},
					{ "text": "options:", "newline": {"post": 2}, "indent": 1},
					{ "text": "--batch definitions.json", "newline": {"post": 1}, "indent": 2},
					{ "text": "render a set of HTML files", "newline": {"post": 1}, "indent": 3},
					{ "text": "--json model.json", "newline": {"post": 1}, "indent": 2},
					{ "text": "names a file containing the model to merge with the HTML view", "newline": {"post": 1}, "indent": 3},
					{ "text": "--output file OR directory", "newline": {"post": 1}, "indent": 2},
					{ "text": "outputs to file or directory", "newline": {"post": 1}, "indent": 3},
					{ "text": "Try slim --help render [:option]", "newline": {"pre": 1,"post":2}, "indent": 1 },
					{ "text": "example: slim render index.html", "newline": {"post": 1, "pre":1}, "indent": 2 },
					{ "text": "example: slim render https://github.com/[:user]/[:repository]/[:branch]/[:path_to_html_file]/index.html", "newline": {"post": 1}, "indent": 2 },
					{ "text": "assumes a file index.json is present in the same location as index.html which contains a json model", "newline": {"post": 1, "pre":1}, "indent": 2 },
					{ "text": "assumes --output==current directory", "newline": {"post": 1}, "indent": 2 }
				],
				"batch": [
					{ "text": "option --batch definitions.json", "newline": {"post": 1}},
					{ "text": "render multiple HTML files as defined in definitions.json", "newline": {"post": 1}},
					{ "text": "example: slim render --batch definitions.json", "newline": {"post": 1}, "indent": 2},
					{ "text": "example: slim render --batch https://github.com/[:user]/[:repository]/[:branch]/[:path_to_site_file]/definitions.json", "newline": {"post": 1}, "indent": 2},
					{ "text": "no other option are honored with this option", "newline": {"post": 2}, "indent": 1}
				],
				"json": [
					{ "text": "option --json model.json", "newline": {"post": 1}, "indent": 2},
					{ "text": "names a file containing the model to merge with the HTML view", "newline": {"post": 1}, "indent": 3},
					{ "text": "example: slim render index.html --json model.json", "newline": {"post": 1}, "indent": 2},
					{ "text": "example: slim render index.html --json model1.json --json model2.json --json...", "newline": {"post": 1}, "indent": 2},
					{ "text": "example: slim render https://github.com/[:user]/[:repository]/[:branch]/[:path_to_html_file]/index.html --json model.json", "newline": {"post": 1}, "indent": 2},
					{ "text": "--json argument can be both local and remote files", "newline": {"post": 2}, "indent": 1}
				],
				"output": [
					{ "text": "option --output [:path]", "newline": {"post": 1}, "indent": 2},
					{ "text": "example: slim render index.html --output rendered.html", "newline": {"post": 1}, "indent": 2},
					{ "text": "example: slim render index.html --output output_dir", "newline": {"post": 1}, "indent": 2},
					{ "text": "example: slim render https://github.com/[:user]/[:repository]/[:branch]/[:path_to_html_file]/index.html --output [:path]", "newline": {"post": 1}, "indent": 2}
				]
			}
		}
	]
}